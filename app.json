{
  "expo": {
    "name": "Next Step",
    "slug": "next-step",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nextstep.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.nextstep.app"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "color": "#4ecdc4"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "next-step"
      }
    }
  }
}
